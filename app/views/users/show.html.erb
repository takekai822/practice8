<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "info", user: @user %>
      <h2 class="mt-3">
        New book
      </h2>
      <%= form_with model: @book, url: books_path, method: :post do |f| %>
        <%= render "books/form", f: f %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <%= render "books/index", books: @user.books %>
    </div>
  </div>
</div>