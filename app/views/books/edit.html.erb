<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
        <%= render "form", f: f %>
      <% end %>
      <%= link_to "Show", book_path(@book), class: "book_#{@book.id}" %>
      |
      <%= link_to "Back", books_path, class: "back" %>
    </div>
  </div>
</div>